<!-- Layout untuk header -->

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= title %></title>
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
                background-color: #fce4ec; /* Warna latar belakang pink muda */
            }

            header {
                background-color: #e91e63; /* Warna header pink tua */
                padding: 15px;
                text-align: center;
                color: #fff;
            }

            nav {
                background-color: #f06292; /* Warna latar belakang navigasi pink */
                overflow: hidden;
            }

            nav a {
                float: left;
                display: block;
                color: #fff;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

            nav a:hover {
                background-color: #ec407a; /* Warna latar belakang hover pink terang */
                color: #333;
            }

            section {
                background-color: #fff; /* Warna latar belakang konten putih */
                padding: 20px;
                margin: 10px;
                border-radius: 5px;
            }

            footer {
                background-color: rgb(247, 179, 189);
                padding: 3px;
                text-align: center;
                color: #e91e63;
                position: fixed;
                bottom: 0;
                width: 100%;
            }
        </style>
    </head>

